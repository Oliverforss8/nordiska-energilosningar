<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Load Halyard Display font %}
    <link rel="stylesheet" href="https://use.typekit.net/pgu6zyr.css">

    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}

    {% # Load and preload the critical CSS %}
    {{ 'critical.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Load Tailwind CSS %}
    {{ 'tailwind.css' | asset_url | stylesheet_tag }}

    {% # Load Lenis smooth scrolling %}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {% # Favicons %}
    <link rel="icon" type="image/svg+xml" href="{{ 'favicon.svg' | asset_url }}">
    <link rel="icon" type="image/png" href="{{ 'favicon-96x96.png' | asset_url }}">
    <link rel="icon" type="image/x-icon" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'apple-touch-icon.png' | asset_url }}">
    <link rel="manifest" href="{{ 'site.webmanifest' | asset_url }}">

    {% # Hide Shopify cookie consent banner %}
    <style>
      #shopify-pc__banner,
      .shopify-pc__banner__dialog,
      .shopify-pc__banner__wrapper {
        display: none !important;
        visibility: hidden !important;
        opacity: 0 !important;
        pointer-events: none !important;
      }
    </style>

    {{ content_for_header }}
  </head>

  <body>
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}

    {% # Initialize Lenis smooth scroll %}

    {% # Load cart functionality %}
    <script src="{{ 'cart.js' | asset_url }}" defer></script>

    {% # Load header scroll functionality %}
    <script src="{{ 'header-scroll.js' | asset_url }}" defer></script>

    {% # Load dropdown functionality %}
    <script src="{{ 'dropdown.js' | asset_url }}" defer></script>

    {% # Load product quantity selector functionality %}
    <script src="{{ 'product-quantity.js' | asset_url }}" defer></script>

    {% # Load quote form functionality %}
    <script src="{{ 'quote-form.js' | asset_url }}" defer></script>

    {% # GSAP core and ScrollTrigger via CDN (kept lightweight) %}
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/gsap.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.13.0/dist/ScrollTrigger.min.js" defer></script>
    {% # Site animations %}
    <script src="{{ 'gsap-animations.js' | asset_url }}" defer></script>
  </body>
</html>
