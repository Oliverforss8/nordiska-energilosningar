  .installation-checkbox:hover {
    transform: scale(1.1);
  }

  .upsell-checkbox:checked,
  .installation-checkbox:checked {
    background-color: #171717;
  }

  .upsell-product-card:has(.upsell-checkbox:checked) {
    background-color: #f9fafb;
    border-color: #4ade80;
    border-width: 2px;
  }

