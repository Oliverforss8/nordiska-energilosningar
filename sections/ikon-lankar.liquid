{% liquid
  assign section_id = section.settings.custom_id | default: section.id
%}

<section
  id="{{ section_id }}"
  class="relative z-[99] mt-[-20px]"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="layout z-[99] md:w-[80%]">
    <div class="z-[9] flex flex-col gap-[15px] md:flex-row md:justify-between md:gap-[30px]">
      {% for block in section.blocks %}
        <a
          href="{{ block.settings.link }}"
          class="relative z-[99] flex w-full items-center justify-start gap-[20px] rounded-[10px] p-[20px] md:w-auto md:justify-start md:gap-[25px] md:rounded-none md:p-0"
          style="background: #F3F1E8; border: 1px solid rgba(23, 23, 23, 0.05);"
          {{ block.shopify_attributes }}
        >
          {% if block.settings.icon != blank %}
            <div class="flex h-[45px] w-[45px] shrink-0 items-center justify-center overflow-visible md:h-[40px] md:w-[40px]">
              {{
                block.settings.icon
                | image_url: width: 120
                | image_tag:
                  loading: 'lazy',
                  alt: block.settings.text,
                  class: 'h-full w-full object-contain overflow-visible'
              }}
            </div>
          {% endif %}

          {% if block.settings.text != blank %}
            <p class="body1 text-[20px] font-[400] text-[#171717] md:text-[24px]">
              {{ block.settings.text }}
            </p>
          {% endif %}
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% stylesheet %}
  @media (min-width: 768px) {
    .section-icon-links a {
      background: transparent !important;
      border: none !important;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Icon links",
  "tag": "section",
  "class": "section-icon-links",
  "settings": [
    {
      "type": "select",
      "id": "background_color",
      "label": "Background color",
      "options": [
        {
          "value": "#ffffff",
          "label": "White"
        },
        {
          "value": "#f7f7f7",
          "label": "Gray"
        }
      ],
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns on desktop",
      "min": 2,
      "max": 6,
      "default": 3,
      "step": 1
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "Gap between items",
      "min": 0,
      "max": 60,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom ID"
    }
  ],
  "blocks": [
    {
      "type": "icon_link",
      "name": "Icon link",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Link text"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon links",
      "blocks": [
        {
          "type": "icon_link",
          "settings": {
            "text": "Link 1"
          }
        },
        {
          "type": "icon_link",
          "settings": {
            "text": "Link 2"
          }
        },
        {
          "type": "icon_link",
          "settings": {
            "text": "Link 3"
          }
        }
      ]
    }
  ]
}
{% endschema %}
