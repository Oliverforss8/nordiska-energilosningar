<section class="section-links relative z-10 rounded-t-[25px] bg-white pb-[60px] md:pb-[85px] lg:mt-[-20px]">
  <div class="layout  grid grid-cols-1 gap-[20px] pt-[20px] lg:grid-cols-3 lg:pt-[30px]">
    {% for block in section.blocks %}
      {% if block.type == 'card' %}
        <a
          class="rounded-[15px] bg-[#F3F1E8] p-[20px] no-underline md:p-[30px]"
          href="{{ block.settings.link }}"
        >
          <div>
            {% if block.settings.heading != blank %}
              <div class=" flex flex-row items-center justify-between">
                <h3 class=" headline1 decoration-none  text-[24px] text-[#171717] md:text-[36px]">
                  {{ block.settings.heading }}
                </h3>
                <div>
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="30"
                    height="24"
                    viewBox="0 0 30 24"
                    fill="none"
                  >
                    <path d="M2 12H27.5556L17.5556 2" stroke="#171717" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                    <path d="M2 12H27.5556L17.5556 22" stroke="#171717" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </div>
              </div>
            {% endif %}
            {% if block.settings.description != blank %}
              <p class="text pt-[20px] text-[#171717]/75 md:pt-[30px]">
                {{ block.settings.description }}
              </p>
            {% endif %}
          </div>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Länkar sektion",
  "tag": "section",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "card",
      "name": "Kort",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Rubrik",
          "default": "Kort rubrik"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Beskrivning",
          "default": "Kort beskrivning"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Länk"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Länkar sektion",
      "blocks": [
        {
          "type": "card"
        },
        {
          "type": "card"
        },
        {
          "type": "card"
        }
      ]
    }
  ]
}
{% endschema %}
