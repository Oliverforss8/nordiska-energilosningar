              {{ section.settings.card_2_button_text | escape }}
            </button>
          </a>
        {% endif %}
      </div>

      <div class='relative h-full overflow-hidden rounded-[15px]'>
        <img
          src='{{ section.settings.card_3_image | image_url: width: 600 }}'
          alt='{{ section.settings.card_3_image.alt | escape }}'
