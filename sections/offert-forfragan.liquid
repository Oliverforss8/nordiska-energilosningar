            <button class='bg-[#FFF] text-[15px] md:text-[20px] py-[15px] md:py-[18px] px-[20px] md:px-[30px] rounded-[10px] knappetikett text-[#171717] no-underline'>
              {{ section.settings.card_4_button_text | escape }}
            </button>
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

