{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign section_class = "section-hero"
%}

<section
  class='min-h-screen flex-col w-full h-full flex'
>
  <div class='relative flex w-full min-h-screen h-full'>
    {% render "image",
      image: section.settings.background_image,
      class: "w-full h-full object-cover absolute inset-0",
      loading: "lazy"
    %}

    <div
      class='absolute inset-0  h-full'
      style='background: linear-gradient(0deg, rgba(0, 0, 0, 0.20) 0%, rgba(0, 0, 0, 0.20) 100%'
    ></div>

    {% if section.settings.heading != blank %}
      <div class='absolute inset-0  h-full layout'>
        <div class='h-full flex pb-[100px] flex-col justify-end items-start'>
          <h1 class='headline1 text-white pb-[40px]'>
            {{ section.settings.heading | newline_to_br }}
          </h1>
          <div class='flex flex-row gap-[40px] items-center'>
            <div class='shrink-0'>
              <button
                class='px-[20px] flex flex-row gap-[20px] items-center rounded-[10px] py-[17px] knappetikett   shrink-0'
                style='background: linear-gradient(0deg, rgba(255, 255, 255, 0.20) 0%, rgba(255, 255, 255, 0.20) 100%), #EBCF2F;'
              >
                Våra energilösningar
                <svg
                  xmlns='http://www.w3.org/2000/svg'
                  width='22'
                  height='18'
                  viewBox='0 0 22 18'
                  fill='none'
                >
                  <path d="M1 8.99991H21L13.1739 1.17383" stroke="#171717" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  <path d="M1 9.00009H21L13.1739 16.8262" stroke="#171717" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
            </div>
            <p class='body1 text-white'>
              {{ section.settings.subheading | newline_to_br }}
            </p>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .section-hero .image {
    position: absolute;
    width: 100%;
    height: 100%;
    inset: 0;
  }

  .section-hero .image > img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section-hero",
  "blocks": [{ "type": "@theme" }, { "type": "@app" }],
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our site"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Beskrivning",
      "default": "Discover amazing products and services"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Våra energilösningar"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
