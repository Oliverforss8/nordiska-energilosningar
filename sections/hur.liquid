<section>
  <div class="layout py-[62px] md:py-[87px]">
    <div class="text-left">
      {% if section.settings.heading != blank %}
        <h2 class="headline1 text-[#171717]">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="text py-[40px] text-[#171717]/80 md:py-[50px]">
          {{ section.settings.description }}
        </div>
      {% endif %}

      <div class="grid grid-cols-1 gap-[15px] md:grid-cols-2 xl:grid-cols-4">
        {% for block in section.blocks %}
          <div
            class="flex  flex-row items-center justify-center gap-[20px]    bg-[#F3F1E8] p-[20px] md:flex-col md:p-[30px] md:pt-[50px]"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.image != blank %}
              <div class="flex w-[200px] items-center justify-center md:h-[84px] md:w-auto">
                <img
                  src="{{ block.settings.image | image_url: width: 139 }}"
                  alt="{{ block.settings.image.alt | default: block.settings.text }}"
                  width="139"
                  height="84"
                  loading="lazy"
                  class="h-[65px] w-auto object-contain  md:h-[90px]"
                >
              </div>
            {% endif %}
            <div class="flex w-full flex-col">
              {% if block.settings.title != blank %}
                <div class="headline1 flex w-full items-start justify-start text-[24px] leading-[90%] text-[#171717] md:ml-[10px] md:pt-[60px] md:text-[30px]">
                  {{ block.settings.title }}
                </div>
              {% endif %}
              {% if block.settings.description != blank %}
                <div class="text pt-[10px] text-[20px] text-[#171717]/80">
                  {{ block.settings.description }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="flex flex-col justify-start gap-[10px] pt-[50px] md:flex-row">
      {% if section.settings.primary_button_text != blank %}
        <a
          href="{{ section.settings.primary_button_url | default: "#" }}"
          class="knappetikett flex w-auto flex-row items-center gap-[20px] rounded-[10px] px-[20px] py-[17px] text-[#171717] no-underline md:shrink-0"
          style="background: linear-gradient(0deg, rgba(255, 255, 255, 0.20) 0%, rgba(255, 255, 255, 0.20) 100%), #EBCF2F;"
        >
          {{ section.settings.primary_button_text }}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="22"
            height="18"
            viewBox="0 0 22 18"
            fill="none"
          >
            <path d="M1 8.99991H21L13.1739 1.17383" stroke="#171717" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M1 9.00009H21L13.1739 16.8262" stroke="#171717" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}

      {% if section.settings.secondary_button_text != blank %}
        <a
          href="{{ section.settings.secondary_button_url | default: "#" }}"
          class="knappetikett flex flex-row items-center gap-[20px] rounded-[10px] bg-transparent px-[20px] py-[17px] text-[#171717] no-underline md:shrink-0"
          style="border: 1px solid #171717;"
        >
          {{ section.settings.secondary_button_text }}
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="22"
            height="18"
            viewBox="0 0 22 18"
            fill="none"
          >
            <path d="M1 8.99991H21L13.1739 1.17383" stroke="#171717" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M1 9.00009H21L13.1739 16.8262" stroke="#171717" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hur det funkar",
  "tag": "section",
  "class": "hur-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Så här fungerar det"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Lägg till en kort beskrivning här.</p>"
    },
    {
      "type": "header",
      "content": "Primary Button"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "Våra energilösningar"
    },
    {
      "type": "url",
      "id": "primary_button_url",
      "label": "Primary button link"
    },
    {
      "type": "header",
      "content": "Secondary Button"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "Våra energilösningar"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary button link"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Steg titel"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Beskrivande text för steget.</p>"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "How it works",
      "blocks": [
        { "type": "step", "settings": { "title": "Steg 1" } },
        { "type": "step", "settings": { "title": "Steg 2" } },
        { "type": "step", "settings": { "title": "Steg 3" } },
        { "type": "step", "settings": { "title": "Steg 4" } }
      ]
    }
  ]
}
{% endschema %}
