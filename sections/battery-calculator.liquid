{% liquid
  assign section_id = section.settings.custom_id | default: section.id
  assign section_class = 'battery-calculator-section'
%}

<section
  id="{{ section_id }}"
  class="{{ section_class }}"
  style="
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  "
>
  <div class="calculator-container">
    <iframe
      src="https://site-section-magic.lovable.app/calculator"
      class="calculator-iframe"
      title="Batterikalkylator"
      loading="lazy"
    ></iframe>
  </div>
</section>

{% stylesheet %}
  .battery-calculator-section {
    width: 100%;
    padding-top: var(--section-padding-top, 60px);
    padding-bottom: var(--section-padding-bottom, 60px);
    background: var(--color-background, #ffffff);
  }

  .calculator-container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    min-height: 900px;
    position: relative;
  }

  .calculator-iframe {
    width: 100%;
    height: 950px;
    border: none;
    border-radius: 8px;
    display: block;
  }

  @media (max-width: 768px) {
    .battery-calculator-section {
      padding-top: var(--section-padding-top, 40px);
      padding-bottom: var(--section-padding-bottom, 40px);
      padding-left: 16px;
      padding-right: 16px;
    }

    .calculator-iframe {
      height: 1200px;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Batterikalkylator",
  "tag": "section",
  "class": "battery-calculator",
  "settings": [
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom ID",
      "info": "Optional custom ID for the section"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Batterikalkylator"
    }
  ]
}
{% endschema %}
