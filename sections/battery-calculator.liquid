<div class="battery-calculator-section">
  <div class="calculator-container">
    <iframe 
      src="https://site-section-magic.lovable.app/calculator" 
      class="calculator-iframe"
      title="Batterikalkylator"
      loading="lazy"
    ></iframe>
  </div>
</div>

<style>
  .battery-calculator-section {
    width: 100%;
    padding: 60px 20px;
    background: var(--color-background, #ffffff);
  }

  .calculator-container {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
    min-height: 900px;
    position: relative;
  }

  .calculator-iframe {
    width: 100%;
    height: 950px;
    border: none;
    border-radius: 8px;
    display: block;
  }

  @media (max-width: 768px) {
    .battery-calculator-section {
      padding: 40px 16px;
    }
    
    .calculator-iframe {
      height: 1200px;
    }
  }
</style>

