<!-- Din rubrik ovanför iframen -->
<h2>Batterikalkylator</h2>

<!-- Själva iframen som auto-anpassar höjden -->
<iframe
  id="ne-embed-calculator"
  src="https://ditt-projekt.lovable.app/embed/calculator"
  style="width:100%;border:0;overflow:hidden;"
  scrolling="no"
  title="Batterikalkylator"
></iframe>

<!-- JavaScript som gör iframen flexibel i höjd -->
<script>
  (function () {
    var iframe = document.getElementById('ne-embed-calculator');
    function onMessage(e) {
      if (!e || !e.data || e.data.type !== 'EMBED_CALCULATOR_HEIGHT') return;
      iframe.style.height = (e.data.height || 0) + 'px';
    }
    window.addEventListener('message', onMessage, false);
  })();
</script>
