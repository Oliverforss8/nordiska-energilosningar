{% liquid
  assign section_id = section.settings.custom_id | default: section.id
%}

<section
  id="{{ section_id }}"
  class="py-[60px] md:py-[85px]"
>
  <div class="layout">
    <div class="text-left">
      {% if section.settings.heading != blank %}
        <h2 class="headline1 text-[#171717]">
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="text py-[40px] text-[#171717]/80 md:py-[50px]">
          {{ section.settings.description }}
        </div>
      {% endif %}

      <div class="grid grid-cols-1 gap-[15px] md:grid-cols-2 xl:grid-cols-4">
        {% for block in section.blocks %}
          <div
            class="flex  flex-row items-center gap-[20px] rounded-[15px] bg-[#F3F1E8]    p-[20px] md:flex-col md:justify-center md:p-[30px] md:pt-[50px]"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.image != blank %}
              <div class="flex w-[200px] items-center justify-center md:h-[84px] md:w-auto">
                <img
                  src="{{ block.settings.image | image_url: width: 139 }}"
                  alt="{{ block.settings.image.alt | default: block.settings.text }}"
                  width="139"
                  height="84"
                  loading="lazy"
                  class="h-[65px] w-auto object-contain  md:h-[90px]"
                >
              </div>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class="headline1 flex w-full items-center justify-center  text-[24px] leading-[90%] text-[#171717] md:items-start md:justify-start md:pt-[60px] md:text-[30px] ">
                {{ block.settings.text }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Icon section",
  "tag": "section",
  "class": "icon-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Rubrik"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Beskrivning</p>"
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom ID",
      "info": "Add a custom ID to this section for styling purposes"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon image",
          "info": "Upload an icon or image for this feature"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Feature text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon section",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "text": "ökar"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "sänker"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "låg kostnad"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "ökad"
          }
        }
      ]
    }
  ]
}
{% endschema %}
