{% liquid
  assign section_id = section.settings.custom_id | default: section.id
%}

<section
  id='{{ section_id }}'
  class='py-10 md:py-16'
  style='
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  '
>
  <div class='layout'>
    <div class='text-left'>
      {% if section.settings.heading != blank %}
        <h2 class='text-[#171717] headline1'>
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class='text text-[#171717]/80 py-[50px]'>
          {{ section.settings.description }}
        </div>
      {% endif %}

      <div class='grid grid-cols-4 gap-[15px]'>
        {% for block in section.blocks %}
          <div
            class='flex flex-col rounded-[15px] bg-[#F3F1E8] items-center justify-center p-[30px] pt-[50px]'
            {{ block.shopify_attributes }}
          >
            {% if block.settings.image != blank %}
              <div class='w-auto h-[84px] flex items-center justify-center'>
                <img
                  src='{{ block.settings.image | image_url: width: 139 }}'
                  alt='{{ block.settings.image.alt | default: block.settings.text }}'
                  width='139'
                  height='84'
                  loading='lazy'
                  class='w-auto h-[90px]  object-contain'
                >
              </div>
            {% endif %}
            {% if block.settings.text != blank %}
              <div class='pt-[60px] text-[#171717] text-[30px] headline1 justify-start flex w-full leading-[90%]'>
                {{ block.settings.text }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Icon section",
  "tag": "section",
  "class": "icon-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Rubrik"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>Beskrivning</p>"
    },
    {
      "type": "text",
      "id": "custom_id",
      "label": "Custom ID",
      "info": "Add a custom ID to this section for styling purposes"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "default": 40,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon image",
          "info": "Upload an icon or image for this feature"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Feature text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon section",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "text": "ökar"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "sänker"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "låg kostnad"
          }
        },
        {
          "type": "feature",
          "settings": {
            "text": "ökad"
          }
        }
      ]
    }
  ]
}
{% endschema %}
