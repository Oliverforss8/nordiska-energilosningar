{% comment %}
  This section is used in the cart template to render /cart page with an
  overview of the items in customer's cart.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/cart
{% endcomment %}

<h1>{{ 'cart.title' | t }}</h1>

<form action="{{ routes.cart_url }}" method="post">
  <table>
    {% for item in cart.items %}
      <tr>
        <td>
          {% render 'image', image: item.image, url: item.url %}
        </td>
        <td>
          <p>{{ item.product.title }}</p>
          {{ 'cart.remove' | t | link_to: item.url_to_remove }}
        </td>
        <td>
          <input type="text" name="updates[]" value="{{ item.quantity }}">
          <input type="submit" value="{{ 'cart.update' | t }}">
        </td>
      </tr>
    {% endfor %}
  </table>
  <!-- START: Grönt avdrag val -->
  <div class="cart-green-deduction" style="padding: 20px; background: #f8f7ef; border-radius: 8px; margin: 20px 0;">
    <h2>Välj grönt avdrag</h2>

    <div style="padding: 15px; border-radius: 8px; margin-bottom: 10px; background: {% if cart.attributes['gront_avdrag'] == 'GRONT1' %}#e8f8e3{% else %}transparent{% endif %};">
      <label>
        <input type="radio" name="attributes[gront_avdrag]" value="GRONT1" {% if cart.attributes['gront_avdrag'] == 'GRONT1' %}checked{% endif %}>
        <strong>Grönt avdrag 1</strong><br>
        <span>Få upp till 50% rabatt på arbetskostnaden med grönt avdrag (ROT).</span><br>
        <em>Rabattkod: AVDRAG1</em>
      </label>
    </div>

    <div style="padding: 15px; border-radius: 8px; margin-bottom: 10px; background: {% if cart.attributes['gront_avdrag'] == 'GRONT2' %}#e8f8e3{% else %}transparent{% endif %};">
      <label>
        <input type="radio" name="attributes[gront_avdrag]" value="GRONT2" {% if cart.attributes['gront_avdrag'] == 'GRONT2' %}checked{% endif %}>
        <strong>Grönt avdrag 2</strong><br>
        <span>Alternativt grönt avdrag med andra villkor.</span><br>
        <em>Rabattkod: AVDRAG2</em>
      </label>
    </div>

    <div style="padding: 15px; border-radius: 8px; background: {% if cart.attributes['gront_avdrag'] == 'INGET' %}#e8f8e3{% else %}transparent{% endif %};">
      <label>
        <input type="radio" name="attributes[gront_avdrag]" value="INGET" {% if cart.attributes['gront_avdrag'] == 'INGET' or cart.attributes['gront_avdrag'] == blank %}checked{% endif %}>
        <strong>Utan grönt avdrag</strong><br>
        <span>Välj detta alternativ om du inte vill använda grönt avdrag</span><br>
        <em>Ingen rabattkod</em>
      </label>
    </div>
  </div>
  <!-- END: Grönt avdrag val -->

  <input type="submit" name="checkout" value="{{ 'cart.checkout' | t }}">
</form>

{% schema %}
{
  "name": "cart",
  "settings": []
}
{% endschema %}