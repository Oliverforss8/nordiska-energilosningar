<!-- Cart Drawer -->
<div
  class='cart-drawer fixed inset-y-[10px] right-[10px] w-[420px] bg-white shadow-2xl transform translate-x-[calc(100%+10px)] transition-transform duration-300 ease-in-out z-[9999] h-[95%] overflow-hidden rounded-[15px]'
  data-cart-drawer
>
  <!-- Cart Header -->
  <div class='cart-header  flex items-center justify-between px-6 py-4 border-b border-gray-100 bg-white sticky top-0 z-10 rounded-[15px]'>
    <h2 class='headline2 text-[#171717]'>Kundvagn</h2>
    <button
      class='cart-close w-10 h-10 flex items-center justify-center rounded-full hover:bg-gray-100 transition-colors'
      data-cart-close
    >
      <svg
        width='20'
        height='20'
        viewBox='0 0 24 24'
        fill='none'
        xmlns='http://www.w3.org/2000/svg'
      >
        <path d='M18 6L6 18M6 6L18 18' stroke='#171717' stroke-width='2' stroke-linecap='round' stroke-linejoin='round'/>
      </svg>
    </button>
  </div>

  <!-- Cart Content -->
  <div class='cart-content flex flex-col h-full'>
    <!-- Cart Items -->
    <div class='cart-items flex-1 overflow-y-auto' data-cart-items>
      <!-- Cart Items List -->
      <div class='cart-items-list px-6 py-4' data-cart-items-list>
        <!-- Items will be populated by JavaScript -->
      </div>
    </div>

    <!-- Cart Footer -->
    <div class='cart-footer border-t border-gray-100 bg-white p-6 space-y-4 mb-[25px]'>
      <!-- Subtotal -->
      <div class='flex justify-between items-center py-2'>
        <span class='body1 text-[16px] text-[#171717]'>Delsumma</span>
        <span class='knappetikett text-[#171717]' data-cart-total>0 kr</span>
      </div>

      <!-- Buttons -->
      <div class='space-y-3'>
        <button
          class='checkout-btn w-full py-4 rounded-[10px] knappetikett text-[#171717] hover:bg-[#D4B82A] transition-colors'
          style='background: linear-gradient(0deg, rgba(255, 255, 255, 0.20) 0%, rgba(255, 255, 255, 0.20) 100%), #EBCF2F;'
          onclick="window.location.href='/checkout'"
        >
          GÃ¥ till kassan
        </button>

        <a
          href='{{ routes.cart_url }}'
          class='view-cart-link block text-center text-[#171717] hover:text-gray-600 transition-colors body1 text-[16px] py-2'
        >
          Visa kundvagn
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Cart Overlay -->
<div
  class='cart-overlay fixed inset-0 bg-black bg-opacity-50 opacity-0 invisible transition-all duration-300 z-[9998]'
  data-cart-overlay
></div>

{% stylesheet %}
  /* Cart Drawer Styles */
  .cart-drawer.open {
    transform: translateX(0);
  }

  .cart-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .cart-count.show {
    opacity: 1;
    scale: 1;
  }

  /* Cart Item Styles */
  .cart-item {
    display: flex;
    gap: 12px;
    padding: 20px 0;
    border-bottom: 1px solid #f1f5f9;
  }

  .cart-item:last-child {
    border-bottom: none;
  }

  .cart-item-image {
    width: 70px;
    height: 70px;
    object-fit: cover;
    border-radius: 10px;
    background: #f8fafc;
    flex-shrink: 0;
  }

  .cart-item-details {
    flex: 1;
    min-width: 0;
  }

  .cart-item-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 6px;
  }

  .cart-item-title {
    font-family: var(--font-halyard--family);
    font-weight: 400;
    color: #171717;
    font-size: 16px;
    line-height: 110%;
    margin: 0;
  }

  .cart-item-variant {
    font-family: var(--font-halyard--family);
    font-weight: 300;
    font-size: 14px;
    color: #64748b;
    margin-bottom: 8px;
    line-height: 110%;
  }

  .cart-item-price {
    font-family: var(--font-halyard--family);
    font-weight: 400;
    color: #171717;
    font-size: 16px;
    line-height: 100%;
  }

  .cart-item-controls {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 12px;
  }

  .cart-item-quantity {
    display: flex;
    align-items: center;
    gap: 0;
    border: 1px solid #e2e8f0;
    border-radius: 8px;
    overflow: hidden;
    background: white;
  }

  .quantity-btn {
    width: 32px;
    height: 32px;
    border: none;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.15s;
    font-family: var(--font-halyard--family);
    font-size: 16px;
    font-weight: 400;
    color: #475569;
  }

  .quantity-btn:hover {
    background: #f1f5f9;
    color: #171717;
  }

  .quantity-btn:disabled {
    opacity: 0.4;
    cursor: not-allowed;
  }

  .quantity-input {
    width: 40px;
    height: 32px;
    text-align: center;
    border: none;
    border-left: 1px solid #e2e8f0;
    border-right: 1px solid #e2e8f0;
    font-family: var(--font-halyard--family);
    font-weight: 400;
    font-size: 14px;
    color: #171717;
    background: white;
  }

  .quantity-input:focus {
    outline: none;
    background: #f8fafc;
  }

  .cart-item-remove {
    color: #64748b;
    font-family: var(--font-halyard--family);
    font-size: 12px;
    font-weight: 400;
    cursor: pointer;
    padding: 4px 8px;
    border-radius: 6px;
    transition: all 0.15s;
    text-decoration: none;
  }

  .cart-item-remove:hover {
    color: #ef4444;
    background: #fef2f2;
  }

  /* Mobile responsive */
  @media (max-width: 640px) {
    .cart-drawer {
      width: 100vw;
      max-width: 100vw;
    }

    .cart-item {
      padding: 16px 0;
    }

    .cart-item-image {
      width: 60px;
      height: 60px;
    }

    .cart-item-title {
      font-size: 14px;
    }

    .cart-item-price {
      font-size: 15px;
    }
  }
{% endstylesheet %}
